<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:background="@android:color/transparent"
         android:orientation="vertical" >
         
    <RelativeLayout
        android:id="@+id/relativeLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/voiceButtonHeight"
        android:layout_gravity="center_vertical"
        android:background="@color/title" >

        <TextView
            android:id="@+id/textViewWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="@string/placeholder"
            android:textColor="@color/word"
            android:textSize="@dimen/DetailWordFontSize" />

        <Button
            android:id="@+id/buttonTTS"
            android:layout_width="@dimen/voiceButtonWidth"
            android:layout_height="@dimen/voiceButtonHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_sound" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listViewMeans"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:cacheColorHint="#00000000"
        android:drawSelectorOnTop="false"
        android:focusable="false"
        android:listSelector="@android:color/transparent"
        android:padding="1dp"
        android:scrollbars="none" >
    </ListView>
         
</LinearLayout>